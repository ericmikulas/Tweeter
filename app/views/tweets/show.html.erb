<p id="notice"><%= notice %></p>

<p>
  <b>User:</b>
  <%= link_to @tweet.user.username, @tweet.user %>
</p>

<p>
  <b>Time:</b>
  <%= (@tweet.created_at - DateTime.now).abs.to_i %>
</p>

<p>
  <b>Text:</b>
  <%= @tweet.text %>
</p>
<p>
  <%= link_to 'Follow', new_following_url()+"/"+@tweet.user_id.to_s%>
</p>
<% if user_signed_in? %>
<%if current_user.id == @tweet.user.id %>
<%= link_to 'Edit', edit_tweet_path(@tweet) %> |
<%end%>
<%end%>
<%= link_to 'Back', tweets_path %>
